<div class="UKMmonstringer">
	<h2>Lokalmønstringer i {{ monstring.getFylke() }}</h2>
	
	<div id="buttoncontainer" class="container_width">
		<a href="mailto:{{mailtoall}}" class="pull-right btn btn-medium btn-primary" style="text-decoration: none;">
			Send e-post til alle lokalkontakter
		</a>
		<button class="pull-right btn btn-medium btn-primary" id="smstoall">
			Send SMS til alle lokalkontakter
		</button>
		<div class="clearfix"></div>
	</div>
	
	<div class="clearfix"></div>
		
	<ol class="unstyled container_width">
		{% for lokalmonstring in lokalmonstringer %}
			<li class="well well-mini monstring {% if not lokalmonstring.erRegistrert() %}alert alert-error{% endif %}">
		
				<div class="starts pull-right">
					{% if lokalmonstring.erRegistrert() %}
						{{ lokalmonstring.getStart()|date('d.m.y H:i') }}
					{% else %}
						Ikke registert
					{% endif %}
				</div>
		
				<div class="actions">
					<div class="pull-left details_show clickable">
						<img src="//ico.ukm.no/sirkel-pluss-256.png" /><br />
						<small>Vis detaljer</small>
					</div>
					<div class="pull-left details_hide clickable" style="display:none;">
						<img src="//ico.ukm.no/sirkel-minus-256.png" /><br />
						<small>Skjul detaljer</small>
					</div>
		
					<div class="pull-left wpadmin clickable" data-url="{{ lokalmonstring.getLink() }}wp-admin/">
						<img src="//ico.ukm.no/wordpress-32.png" /><br />
						<small>Gå til kontrollpanel</small>
					</div>
				</div>
				
				<h2>{{ lokalmonstring.getNavn() }}</h2>
		
				<div class="clearfix"></div>
				
				<div class="details" style="display:none;">
					<h3>lokalkontakter</h3>
					<table class="table">
					{% for kontakt in lokalmonstring.getKontaktpersoner() %}
						<tr>
							<td><img src="{{ kontakt.getBilde()|replace({'http:':'https:'}) }}" /></td>
							<td>{{ kontakt.getNavn() }}</td>
							<td class="UKMSMS">{{ kontakt.getTelefon() }}</td>
							<td><a href="mailto:{{ kontakt.getEpost() }}">{{ kontakt.getEpost() }}</a></td>
						</tr>
					{% endfor %}
					</table>
				</div>
				<div class="clearfix"></div>
			</li>
		{% endfor %}
	</ol>
</div>